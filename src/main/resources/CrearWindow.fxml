<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.Region?>

<StackPane style="-fx-background-color: linear-gradient(to bottom right, #1a237e, #3949ab);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.finalproyect.controllers.CrearController">
   <VBox alignment="CENTER" spacing="15.0" maxWidth="400">
      <padding>
         <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
      </padding>

      <Label text="Crear Proceso" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;">
         <effect>
            <DropShadow/>
         </effect>
      </Label>

      <Region prefHeight="20.0" />

      <Label text="Nombre" style="-fx-text-fill: white; -fx-font-size: 14;"/>
      <TextField fx:id="Nombre" style="-fx-background-radius: 15; -fx-background-color: rgba(255,255,255,0.9); -fx-prompt-text-fill: #666;"
                 prefWidth="300" prefHeight="35"/>

      <Label fx:id="Descripcion" text="Descripción" style="-fx-text-fill: white; -fx-font-size: 14;"/>
      <TextField style="-fx-background-radius: 15; -fx-background-color: rgba(255,255,255,0.9); -fx-prompt-text-fill: #666;"
                 prefWidth="300" prefHeight="35"/>

      <Label fx:id="Id" text="Id" style="-fx-text-fill: white; -fx-font-size: 14;"/>
      <TextField style="-fx-background-radius: 15; -fx-background-color: rgba(255,255,255,0.9); -fx-prompt-text-fill: #666;"
                 prefWidth="300" prefHeight="35"/>

      <Region prefHeight="20.0" />

      <Button fx:id="Anhadir_actividad" onAction="#Anhadir_actividad"
              style="-fx-background-color: white; -fx-text-fill: #1a237e; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 20;"
              prefWidth="200" prefHeight="40" text="Añadir actividad">
         <effect>
            <DropShadow/>
         </effect>
      </Button>

      <Button fx:id="Regreso" onAction="#Regreso"
              style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-color: white; -fx-border-radius: 20; -fx-background-radius: 20;"
              prefWidth="200" prefHeight="40" text="Regresar">
         <effect>
            <DropShadow/>
         </effect>
      </Button>
   </VBox>
</StackPane>
