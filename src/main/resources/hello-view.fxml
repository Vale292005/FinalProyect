<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.Region?>

<StackPane style="-fx-background-color: linear-gradient(to bottom right, #1a237e, #3949ab);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.finalproyect.controllers.HelloController">
    <VBox alignment="CENTER" spacing="30.0" maxWidth="400">
        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
        </padding>

        <Text fill="WHITE" text="Sistema de GestiÃ³n" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <effect>
                <DropShadow/>
            </effect>
        </Text>

        <Region prefHeight="20.0" />

        <Button fx:id="Administrador" onAction="#OpenAdmin"
                style="-fx-background-color: white; -fx-text-fill: #1a237e; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 20;"
                prefWidth="200" prefHeight="40" text="Administrador">
            <effect>
                <DropShadow/>
            </effect>
        </Button>

        <Button fx:id="Usuario" onAction="#OpenUser"
                style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-color: white; -fx-border-radius: 20; -fx-background-radius: 20;"
                prefWidth="200" prefHeight="40" text="Usuario">
            <effect>
                <DropShadow/>
            </effect>
        </Button>
    </VBox>
</StackPane>
