<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane style="-fx-background-color: linear-gradient(to bottom right, #1a237e, #3949ab);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.finalproyect.controllers.CrearTareaController">
   <VBox alignment="CENTER" maxWidth="400" spacing="15.0">
      <padding>
         <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
      </padding>

      <Label style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" text="Crear Tarea">
         <effect>
            <DropShadow />
         </effect>
      </Label>

      <Region prefHeight="20.0" />

      <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="Nombre" />
      <TextField fx:id="Nombre" prefHeight="35" prefWidth="300" style="-fx-background-radius: 15; -fx-background-color: rgba(255,255,255,0.9); -fx-prompt-text-fill: #666;" />

      <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="Descripción" />
      <TextField fx:id="Descripcion" prefHeight="35" prefWidth="300" style="-fx-background-radius: 15; -fx-background-color: rgba(255,255,255,0.9); -fx-prompt-text-fill: #666;" />

      <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="Obligatoria" />
      <TextField fx:id="Obligatoria" prefHeight="35" prefWidth="300" style="-fx-background-radius: 15; -fx-background-color: rgba(255,255,255,0.9); -fx-prompt-text-fill: #666;" />

      <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="Tiempo" />
      <TextArea fx:id="Tiempo" prefHeight="100" prefWidth="300" style="-fx-background-radius: 15; -fx-background-color: rgba(255,255,255,0.9); -fx-prompt-text-fill: #666;" />
      <Button fx:id="Ver" mnemonicParsing="false" onAction="#Ver" text="Ver" />

      <Region prefHeight="20.0" />

      <Button fx:id="Anhadir_Tarea" onAction="#Anhadir_Tarea" prefHeight="40" prefWidth="200" style="-fx-background-color: white; -fx-text-fill: #1a237e; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 20;" text="Añadir Tarea">
         <effect>
            <DropShadow />
         </effect>
      </Button>

      <Button fx:id="Regresar" onAction="#Regresar" prefHeight="40" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-color: white; -fx-border-radius: 20; -fx-background-radius: 20;" text="Regresar">
         <effect>
            <DropShadow />
         </effect>
      </Button>
   </VBox>
</StackPane>
